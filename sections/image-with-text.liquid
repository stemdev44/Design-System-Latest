{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{{ 'video-section.css' | asset_url | stylesheet_tag }}
{{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}-padding .accordion+.accordion {
    margin-top: 2.5rem;
  }
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout == 'no-overlap'
    assign remove_color_classes = true
  endif
  
  assign video_id = section.settings.video.id | default: section.settings.video_url.id
  assign mobile_video_id = section.settings.mobile_video.id | default: section.settings.video_url.id
  
  if section.settings.video != null
    assign ratio_diff = section.settings.video.aspect_ratio | minus: poster.aspect_ratio | abs
    if ratio_diff < 0.01 and ratio_diff > 0
      assign fix_ratio = true
    endif
  endif  
-%}

{% if section.settings.cover_image != blank %}
  {% comment %} assign poster = section.settings.video.preview_image | default: section.settings.cover_image {% endcomment %}
  {% assign poster = section.settings.cover_image %}
{% else %}
  {% assign poster = section.settings.video.preview_image %}
{% endif %}

{% if section.settings.mobile_cover_image != blank %}
  {% comment %} assign poster = section.settings.video.preview_image | default: section.settings.cover_image {% endcomment %}
  {% assign mobile_poster = section.settings.mobile_cover_image %}
{% else %}
  {% assign mobile_poster = section.settings.mobile_video.preview_image %}
{% endif %}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="{% if section.settings.layout_page == 'grid' %} page-width{% endif %} ">
    <div class="image-with-text image-with-text--{{ section.settings.content_layout }} isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %}{% unless section.settings.color_scheme == section.settings.section_color_scheme and settings.media_border_thickness > 0 and settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0 %} collapse-corners{% endunless %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %}">
        {% comment %} /////////////////////////// desktop video starts //////////////// {% endcomment %}
        <div class="small-hide image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item"
              style="position:relative; height:100vh">
            {%- if section.settings.video == null and section.settings.video_url == null   -%}
              <style>
              .section-{{ section.id }}-padding .global-media-settings{
                border:0;
              }
              .section-{{ section.id }}-padding .image-with-text__media img{
                border-radius:{{section.settings.column_corner_radius}}px;
              }
                               
              </style>
              <div
                class="image-with-text__media image-with-text__media--{{ section.settings.height }} global-media-settings{% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}{% if section.settings.image != blank %} media{% else %} image-with-text__media--placeholder placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}"
                {% if section.settings.height == 'adapt' and section.settings.image != blank %}
                  style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"    
                {% endif %}

              >
                {%- if section.settings.image != blank -%}
                  {%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
                    {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
                    {%- capture sizes -%}
                  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
                  (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
                {%- endcapture -%}
                  {%- else -%}
                    {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                    {%- capture sizes -%}
                  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                  (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                {%- endcapture -%}
                  {%- endif -%}
                  {{
                    section.settings.image
                    | image_url: width: 1500
                    | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
                  }}
                {%- else -%}
                  {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}           
              </div>                 
            {%- endif -%} 

            {%- if section.settings.video != null or section.settings.video_url != null  -%}
                  <div >
                    <div>
                      <deferred-media
                        class="video-section__media deferred-media"
                        data-media-id="{{ video_id }}"                            
                        style="border-radius:{{section.settings.column_corner_radius}}px; {% if poster != null %} --ratio-percent: {{ 1 | divided_by: poster.aspect_ratio | times: 100 }}%;{% endif %}"
                      >
                        <button
                          id="Deferred-Poster-Modal-{{ video_id }}"
                          class="video-section__poster media deferred-media__poster media--landscape"
                          type="button"
                          aria-label="{{ alt }}"
                        >
                          {%- if poster != null -%}
                            {{
                              poster
                              | image_url: width: 3840
                              | image_tag: sizes: sizes, widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840', alt: alt
                            }}
                          {%- else -%}
                            {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                          {%- endif -%}
                          <span class="deferred-media__poster-button motion-reduce" {% if section.settings.video_button_text != blank %} style="background-color: transparent; border: none; width:100%" {% endif %}>
                            <span class="svg-wrapper" {% if section.settings.video_button_text != blank %} style="width:100%" {% endif %}>
                              {%- if section.settings.video_button_text == blank -%}
                                {{- 'icon-play.svg' | inline_asset_content -}}
                              {%- endif -%}                                                                    

                                {%- if section.settings.video_button_text != blank -%}
                                  {%- if section.settings.video_no_border_style -%}
                                      <style>
                                        .section-{{ section.id }}-padding .svg-wrapper .button:after{
                                            box-shadow: none;
                                          }                                        
                                      </style>  
                                    {%- endif -%}
                                  <a class="button{% if section.settings.video_button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                                      style="cursor: pointer; color: {{section.settings.video_button_font}}; background-color: {{section.settings.video_button_background}};" 
                                  >
                                    {{ section.settings.video_button_text | escape }}
                                  </a>
                                {%- endif -%}
                            </span>
                          </span>

                        </button>
                        <template>
                          {%- if section.settings.video == null and section.settings.video_url != null -%}
                            {%- liquid
                              assign loop = ''
                              if section.settings.enable_video_looping
                                assign loop = '&loop=1&playlist=' | append: video_id
                              endif
                            -%}
                            {%- if section.settings.video_url.type == 'youtube' -%}
                              <iframe
                                src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&autoplay=1{{ loop }}"
                                class="js-youtube"
                                allow="autoplay; encrypted-media"
                                allowfullscreen
                                title="{{ section.settings.description | escape }}"
                              ></iframe>
                            {%- else -%}
                              <iframe
                                src="https://player.vimeo.com/video/{{ video_id }}?autoplay=1{{ loop }}"
                                class="js-vimeo"
                                allow="autoplay; encrypted-media"
                                allowfullscreen
                                title="{{ section.settings.description | escape }}"
                              ></iframe>
                            {%- endif -%}
                          {%- else -%}
                            {{
                              section.settings.video
                              | video_tag:
                                image_size: '1100x',
                                autoplay: true,
                                loop: section.settings.enable_video_looping,
                                controls: true,
                                muted: false
                            }}
                          {%- endif -%}
                        </template>
                      </deferred-media>
                    </div>
                  </div>
            {%- endif -%}
        </div>
        {% comment %} /////////////////////////// desktop video Ends //////////////// {% endcomment %}

        {% comment %} ////////////// Mobile Video Starts //////////////////// {% endcomment %}
        <div class="medium-hide large-up-hide image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item">
            {%- if section.settings.mobile_video == null and section.settings.video_url == null   -%}
              <style>
              .section-{{ section.id }}-padding .global-media-settings{
                border:0;
              }
              .section-{{ section.id }}-padding .image-with-text__media img{
                border-radius:{{section.settings.column_corner_radius}}px;
              }                  
              </style>
              <div
                class="image-with-text__media image-with-text__media--{{ section.settings.height }} global-media-settings{% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}{% if section.settings.image != blank %} media{% else %} image-with-text__media--placeholder placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}"
                {% if section.settings.height == 'adapt' and section.settings.image != blank %}
                  style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
                {% endif %}
              >
                {%- if section.settings.image != blank -%}
                  {%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
                    {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
                    {%- capture sizes -%}
                  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
                  (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
                {%- endcapture -%}
                  {%- else -%}
                    {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                    {%- capture sizes -%}
                  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                  (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                {%- endcapture -%}
                  {%- endif -%}
                  {{
                    section.settings.image
                    | image_url: width: 1500
                    | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
                  }}
                {%- else -%}
                  {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}           
              </div>                 
            {%- endif -%} 

            {%- if section.settings.mobile_video != null or section.settings.video_url != null  -%}
                  <div >
                    <div>
                      <deferred-media
                        class="video-section__media deferred-media"
                        data-media-id="{{ mobile_video_id }}"                            
                        style="border-radius:{{section.settings.column_corner_radius}}px; {% if mobile_poster != null %} --ratio-percent: {{ 1 | divided_by: mobile_poster.aspect_ratio | times: 100 }}%;{% endif %}"
                      >
                        <button
                          id="Deferred-Poster-Modal-{{ mobile_video_id }}"
                          class="video-section__poster media deferred-media__poster media--landscape"
                          type="button"
                          aria-label="{{ alt }}"
                        >
                          {%- if mobile_poster != null -%}
                            {{
                              mobile_poster
                              | image_url: width: 3840
                              | image_tag: sizes: sizes, widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840', alt: alt
                            }}
                          {%- else -%}
                            {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                          {%- endif -%}
                          <span class="deferred-media__poster-button motion-reduce" {% if section.settings.video_button_text != blank %} style="background-color: transparent; border: none; width:100%" {% endif %}>
                            <span class="svg-wrapper" {% if section.settings.video_button_text != blank %} style="width:100%" {% endif %}>
                              {%- if section.settings.video_button_text == blank -%}
                                {{- 'icon-play.svg' | inline_asset_content -}}
                              {%- endif -%}                                                                    

                                {%- if section.settings.video_button_text != blank -%}
                                  {%- if section.settings.video_no_border_style -%}
                                      <style>
                                        .section-{{ section.id }}-padding .svg-wrapper .button:after{
                                            box-shadow: none;
                                          }                                        
                                      </style>  
                                    {%- endif -%}
                                  <a class="button{% if section.settings.video_button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                                      style="cursor: pointer; color: {{section.settings.video_button_font}}; background-color: {{section.settings.video_button_background}};" 
                                  >
                                    {{ section.settings.video_button_text | escape }}
                                  </a>
                                {%- endif -%}
                            </span>
                          </span>

                        </button>
                        <template>
                          {%- if section.settings.mobile_video == null and section.settings.video_url != null -%}
                            {%- liquid
                              assign loop = ''
                              if section.settings.enable_video_looping
                                assign loop = '&loop=1&playlist=' | append: video_id
                              endif
                            -%}
                            {%- if section.settings.video_url.type == 'youtube' -%}
                              <iframe
                                src="https://www.youtube.com/embed/{{ mobile_video_id }}?enablejsapi=1&autoplay=1{{ loop }}"
                                class="js-youtube"
                                allow="autoplay; encrypted-media"
                                allowfullscreen
                                title="{{ section.settings.description | escape }}"
                              ></iframe>
                            {%- else -%}
                              <iframe
                                src="https://player.vimeo.com/video/{{ mobile_video_id }}?autoplay=1{{ loop }}"
                                class="js-vimeo"
                                allow="autoplay; encrypted-media"
                                allowfullscreen
                                title="{{ section.settings.description | escape }}"
                              ></iframe>
                            {%- endif -%}
                          {%- else -%}
                            {{
                              section.settings.mobile_video
                              | video_tag:
                                image_size: '1100x',
                                autoplay: true,
                                loop: section.settings.enable_video_looping,
                                controls: true,
                                muted: false
                            }}
                          {%- endif -%}
                        </template>
                      </deferred-media>
                    </div>
                  </div>
            {%- endif -%}
        </div>        
         {% comment %} ///////////////////////////Mobile Video Ends /////////////////////// {% endcomment %}
        <div class="image-with-text__text-item grid__item">
          <div
            id="ImageWithText--{{ section.id }}"
            class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} content-container{% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}"
          >
            {%- for block in section.blocks -%}
              {% case block.type %}
                {%- when 'heading' -%}
                  <h2
                    class="image-with-text__heading inline-richtext {{ block.settings.heading_size }}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.heading }}
                  </h2>
                {%- when 'caption' -%}
                  <p
                    class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.caption | escape }}
                  </p>
                {%- when 'text' -%}
                  <div class="image-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                    {{ block.settings.text }}

                      {%-if block.settings.icon_image != blank -%}
                          <style>
                            .section-{{ section.id }}-padding ul {
                              list-style: none;
                              padding-left: 0; 
                            }

                            .section-{{ section.id }}-padding ul li {
                              position: relative;
                              padding-left: 30px; 
                            }

                            .section-{{ section.id }}-padding ul li::before {
                              content: "";
                              background: url("{{ block.settings.icon_image | img_url:"" }}");
                              background-size: cover;
                              background-repeat: no-repeat;
                              background-position: center;
                              width: 20px;
                              height: 20px;
                              position: absolute;
                              left: 0;
                              top: 0;
                              transform: translateY(30%);
                            }
                              @media screen and (max-width: 749px) {
                                .section-{{ section.id }}-padding .image-with-text__text.rte 
                                  {
                                    text-align:{{section.settings.mobile_content_alignment}} !important;  
                                  }
                              }
                          </style>                    
                      {%-endif -%}

                  </div>
                {%- when 'button' -%}
                  {%- if block.settings.button_label != blank and block.settings.scroll_to_section and block.settings.scroll_to_section < 1-%}
                    <a
                      {% if block.settings.button_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link }}"
                      {% endif %}
                      {% unless block.settings.no_border_style %}
                        class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                      {% endunless %}
                      {% if block.settings.no_border_style %}
                        style="text-decoration: none; color: #000;"
                      {% endif %}                               
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.button_label | escape }}
                    </a>
                  {%- endif -%}
                  {% comment %} /////////////// Discover More Button Starts ////////////// {% endcomment %}
                    {% if block.settings.scroll_to_section and block.settings.scroll_to_section > 0 %}
                      <button class="discover-more-button button" data-target-section="{{ block.settings.scroll_to_section }}">
                        ↓ DISCOVER MORE
                      </button>
                      <script>
                        document.addEventListener("DOMContentLoaded", function () {
                          const scrollButton = document.querySelector(".discover-more-button");
                          if (!scrollButton) return;

                          scrollButton.addEventListener("click", function () {
                            const sectionOffset = parseInt(this.getAttribute("data-target-section"));
                            if (isNaN(sectionOffset) || sectionOffset <= 0) return;

                            const sections = Array.from(document.querySelectorAll(".shopify-section"));

                            const currentSection = this.closest(".shopify-section");
                            const currentIndex = sections.indexOf(currentSection);

                            const targetIndex = currentIndex + sectionOffset;

                            if (targetIndex < sections.length) {
                              sections[targetIndex].scrollIntoView({ behavior: "smooth" });
                            }
                          });
                        });
                      </script>
                      <style>
                        .discover-more-button {
                          background: transparent;
                          color: black;
                          padding:0 !important;
                          margin:0 !important;
                        }
                        .discover-more-button:after{
                          box-shadow:none!important;
                        }              
                      </style>                         
                    {% endif %}           
                  {% comment %} /////////////////////////Discover more Button Ends//////////// {% endcomment %}
                {%- when 'image_picker' -%}
                  {%- if block.settings.image != blank -%}
                      <img src="{{ block.settings.image | img_url: 'medium' }}" alt="" />
                  {%- endif -%}   

                {%- when 'collapsible_row' -%}
                  <div
                    class="accordion{% if section.settings.layout == 'row' %} content-container color-{{ section.settings.container_color_scheme }} gradient{% endif %}" 
                    style="width: 100%;
                    {% if block.settings.background_style == 'primary' %} 
                      background: {{ block.settings.column_background_color }}; color: {{ block.settings.column_font_color }}; overflow: hidden; border-radius:{{block.settings.column_corner_radius}}px 
                    {% endif %}"
                    {{ block.shopify_attributes }}
                  >
                    <details
                      id="Details-{{ block.id }}-{{ section.id }}"
                      {% if block.settings.open_first_collapsible_row  %}
                        open
                      {% endif %}
                    >
                      <summary id="Summary-{{ block.id }}-{{ section.id }}"                         
                          style="padding: 1.5rem 1.5rem; {% if block.settings.background_style == 'primary' %} background:{{ block.settings.column_background_color }}; color:{{block.settings.column_font_color}};{% endif %}"                         
                      >
                        {% if block.settings.background_style == 'primary' %}
                          <style>
                            #Summary-{{ block.id }}-{{ section.id }} .svg-wrapper svg{
                              fill: {{block.settings.column_font_color}};
                            }
                          </style>
                        {%- endif -%}

                        {% render 'icon-accordion', icon: block.settings.icon, custom_image: block.settings.custom_image  %}
                        <h3 class="accordion__title inline-richtext h4" {% if block.settings.background_style == 'primary' %} style="color:{{block.settings.column_font_color}}" {% endif %} >
                          {{ block.settings.heading | default: block.settings.page.title }}
                        </h3>
                        {{- 'icon-caret.svg' | inline_asset_content -}}
                      </summary>
                      <div
                        class="accordion__content rte"
                        id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
                        role="region"
                        aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
                        style="padding: 0 1.5rem"
                      >
                        {{ block.settings.row_content }}
                        {{ block.settings.page.content }}
                      </div>
                    </details>
                  </div>

              {%- endcase -%}
            {%- endfor -%}

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.image-with-text.name",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "layout_page",
      "options": [
        {
          "value": "full_bleed",
          "label": "t:sections.slideshow.settings.layout.options__1.label"
        },
        {
          "value": "grid",
          "label": "t:sections.slideshow.settings.layout.options__2.label"
        }
      ],
      "default": "full_bleed",
      "label": "Page Layout"
    },    
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "select",
      "id": "height",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.image-with-text.settings.height.options__1.label"
        },
        {
          "value": "small",
          "label": "t:sections.image-with-text.settings.height.options__2.label"
        },
        {
          "value": "medium",
          "label": "t:sections.image-with-text.settings.height.options__3.label"
        },
        {
          "value": "large",
          "label": "t:sections.image-with-text.settings.height.options__4.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.image-with-text.settings.height.label"
    },
    {
      "type": "select",
      "id": "desktop_image_width",
      "options": [
        {
          "value": "small",
          "label": "t:sections.image-with-text.settings.desktop_image_width.options__1.label"
        },
        {
          "value": "medium",
          "label": "t:sections.image-with-text.settings.desktop_image_width.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.image-with-text.settings.desktop_image_width.options__3.label"
        }
      ],
      "default": "medium",
      "label": "t:sections.image-with-text.settings.desktop_image_width.label"
    },
    {
      "type": "range",
      "id": "column_corner_radius",
      "min": 0,
